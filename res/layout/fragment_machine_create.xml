<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:harmony="http://schemas.android.com/apk/res/com.gesture"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
    	android:id="@+id/machine_nom_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/machine_nom_label"/>
    <EditText
		android:id="@+id/machine_nom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="text"
		android:layout_below="@+id/machine_nom_label" />
    <TextView
    	android:id="@+id/machine_zone_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/machine_nom"
	    android:text="@string/machine_zone_label"/>
    <com.gesture.harmony.widget.SingleEntityWidget
        android:id="@+id/machine_zone_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_below="@+id/machine_zone_label" />
    <TextView
    	android:id="@+id/machine_logtracas_label"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/machine_zone_button"
	    android:text="@string/machine_logtracas_label"/>
    <com.gesture.harmony.widget.MultiEntityWidget
        android:id="@+id/machine_logtracas_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:layout_below="@+id/machine_logtracas_label" />
</RelativeLayout>
