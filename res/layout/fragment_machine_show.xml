<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
		<RelativeLayout
			android:id="@+id/machine_data_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp" >
			<TextView
				android:id="@+id/machine_nom_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/machine_nom_label"/>
			<TextView
				android:id="@+id/machine_nom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				android:layout_below="@+id/machine_nom_label" />
			<TextView
				android:id="@+id/machine_zone_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/machine_nom"
				android:text="@string/machine_zone_label"/>
			<TextView
				android:id="@+id/machine_zone"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				android:layout_below="@+id/machine_zone_label" />
			<TextView
				android:id="@+id/machine_logtracas_label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/machine_zone"
				android:text="@string/machine_logtracas_label"/>
			<TextView
				android:id="@+id/machine_logtracas"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textIsSelectable="true"
				android:layout_below="@+id/machine_logtracas_label" />
		</RelativeLayout>
	</ScrollView>
	<TextView
	    android:id="@+id/machine_empty"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:visibility="gone"
	    android:text="@string/machine_not_found" />
</RelativeLayout>
